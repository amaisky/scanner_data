pivotXGetCurDate()=>
    result = month(time)
    if isintraday
        result := interval <= 15 ? dayofmonth(time) : weekofyear(time)
    else
        if isweekly or ismonthly
            result := year(time)
    result

fNeg(value) => value <= 0 ? na : value

